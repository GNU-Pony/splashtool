RUNTIME DEPENDENCIES:

	gzip: decompress fonts
	nafe: read font files
	kbd: default font
	imagemagick: output to png
	bash
	awk
	grep
	sed
	coreutils
	glibc


BUILD DEPENDENCIES:

	make
	coreutils
	sed
	glibc
	gcc
	texinfo: manuals (opt-out)
	texlive-core: pdf, dvi and ps manuals (opt-in)


INSTALL DEPENDENCIES:

	make
	coreutils

